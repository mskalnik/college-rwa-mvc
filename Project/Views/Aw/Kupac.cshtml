@model IEnumerable<Kupac>

@{
    ViewBag.Title = "Kupac";
}

<h2>Kupac</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-hover table-striped table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Ime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Prezime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telefon)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GradID)
        </th>
        <th>
            Uredi
        </th>
        <th>
            Racuni
        </th>
    </tr>

@foreach (var item in Model) {
    @Html.HiddenFor(modelItem => item.IDKupac)
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Ime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Prezime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Telefon)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GradID)
        </td>
        <td>
            @Html.ActionLink("Uredi kupca", "UrediKupca", "Aw", new { id = item.IDKupac }, new { @class = "btn btn-small btn-primary" })
        </td>
        <td>
            @Html.ActionLink("Pogledaj racune", "Racuni", "Aw", new { id = item.IDKupac }, new { @class = "btn btn-small btn-primary" })
        </td>
    </tr>
}

</table>
